.publish-box {
  width: 100vw;
  height: 100vh;
  background-size: 100% 100%;
  display: flex;
  flex-direction: column;
}
.publish-top {
  width: 100%;
  height: 12%;
  background-color: rgba(255, 255, 255, 0.7);
  border-bottom: 2rpx solid #ffffff;
  box-shadow: 0 5rpx 5rpx 0 rgba(0, 0, 0, 0.2);
  display: flex;
}
.publish-top .publish-back {
  width: 7vw;
  height: 7vw;
  margin-left: 5vw;
  margin-top: 6vh;
}
.publish-top .pub-title {
  width: 50%;
  margin-left: 13vw;
  font-size: 40rpx;
  line-height: 15vh;
  color: #000;
  text-align: center;
}
.publish-body {
  width: 100vw;
  height: 80vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow-y: auto;
}
.publish-body .pub-card {
  width: 80vw;
  min-height: 18vh;
  margin-top: 3vh;
  border-radius: 30rpx;
  border: 2rpx solid #ffffff;
  box-shadow: 0 5rpx 5rpx 5rpx rgba(0, 0, 0, 0.2);
  color: #000;
  background-color: rgba(255, 255, 255, 0.5);
  position: relative;
}
.publish-body .pub-card .card-title-box {
  height: 3vh;
  margin-top: 1vh;
  width: 70vw;
  margin-left: 5vw;
  overflow: clip;
}
.publish-body .pub-card .card-title-box .card-title {
  font-size: 35rpx;
}
.publish-body .pub-card .card-body-box {
  min-height: 7vh;
  max-height: 7vh;
  width: 70vw;
  margin-left: 5vw;
  margin-top: 1vh;
  overflow-y: hidden;
}
.publish-body .pub-card .card-body-box .card-body {
  font-size: 30rpx;
  color: #5a5a5a;
}
.publish-body .pub-card .pub-button {
  width: 50vw;
  height: 4vh;
  margin-left: 35%;
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 1vh;
}
.publish-body .pub-card .pub-button .publish-card-button,
.publish-body .pub-card .pub-button .delete-card-button {
  width: 20vw;
  height: 100%;
  border-radius: 2vh;
  font-size: 30rpx;
  line-height: 4vh;
  box-shadow: 3rpx 3rpx 5rpx 5rpx rgba(200, 200, 200, 0.3);
}
.publish-body .pub-card .pub-button .publish-card-button {
  border: 1rpx solid #607460;
  background-color: #a9cdaa;
}
.publish-body .pub-card .pub-button .delete-card-button {
  border: 1rpx solid #607460;
}
.publish-body .pub-add {
  width: 12vw;
  height: 12vw;
  position: absolute;
  bottom: 10vh;
  left: 44vw;
}
.add-container {
  width: 100vw;
  height: 70vh;
  border-radius: 5vw 5vw 0 0;
  background-color: #ffffff;
}
.add-container .add-header {
  font-size: 35rpx;
  width: 100vw;
  height: 3vh;
  text-align: center;
}
.add-container .add-body {
  width: 90vw;
  height: 55vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.add-container .add-body .title-input {
  margin-left: 5vw;
  font-size: 40rpx;
  height: 5vh;
  width: 100%;
}
.add-container .add-body .content-input {
  font-size: 35rpx;
  height: 45vh;
  width: 100%;
  margin-top: 2vh;
  margin-left: 5vw;
}
.add-container .add-footer {
  width: 90vw;
  height: 8vh;
  display: flex;
}
.add-container .add-footer .cancel-btn,
.add-container .add-footer .save-btn,
.add-container .add-footer .submit-btn {
  width: 20vw;
  height: 5vh;
  border-radius: 1vh;
  line-height: 5vh;
}
.add-container .add-footer .cancel-btn {
  margin-left: 5vw;
}
.add-container .add-footer .save-btn {
  margin-left: 25vw;
  background-color: #a9cdaa;
}
.add-container .add-footer .submit-btn {
  margin-left: 5vw;
  background-color: #607460;
}
