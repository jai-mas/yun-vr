.collection-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.collection-container .bg-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.collection-container .back-btn {
  position: fixed;
  top: 90rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}
.collection-container .back-btn .back-icon {
  width: 40rpx;
  height: 40rpx;
}
.collection-container .nav-header {
  margin-top: 180rpx;
  padding: 30rpx 0 10rpx;
  position: relative;
  z-index: 5;
}
.collection-container .nav-header .tab-container {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0;
  position: relative;
}
.collection-container .nav-header .tab-container .tab-item {
  padding: 15rpx 0;
  font-size: 28rpx;
  color: #333;
  position: relative;
  flex: 1;
  text-align: center;
}
.collection-container .nav-header .tab-container .tab-item.active {
  color: #4CAF50;
  font-weight: 500;
}
.collection-container .nav-header .active-indicator {
  position: absolute;
  bottom: -2rpx;
  width: 40rpx;
  height: 4rpx;
  background-color: #4CAF50;
  border-radius: 2rpx;
  transition: left 0.3s ease;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.collection-container .content-area {
  flex: 1;
  position: relative;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
}
.collection-container .content-area .scenic-list {
  position: relative;
  padding: 20rpx 30rpx;
}
.collection-container .content-area .scenic-list .scenic-item {
  margin-bottom: 30rpx;
}
.collection-container .content-area .scenic-list .scenic-item .item-content {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.collection-container .content-area .scenic-list .scenic-item .item-content .item-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.collection-container .content-area .scenic-list .scenic-item .item-content .item-title {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}
.collection-container .content-area .scenic-list .scenic-item .item-content .item-arrow {
  font-size: 30rpx;
  color: #999;
  margin-right: 10rpx;
}
