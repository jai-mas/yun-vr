.museum-container .hot-title {
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
}
.museum-container .hot-museum-swiper {
  height: 350rpx;
  width: 100%;
  box-sizing: border-box;
}
.museum-container .hot-museum-swiper .swiper-item {
  height: 100%;
  width: 100%;
  position: relative;
}
.museum-container .hot-museum-swiper .swiper-item .swiper-image {
  width: 100%;
  height: 100%;
  display: block;
}
.museum-container .hot-museum-swiper .swiper-item .swiper-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  color: #fff;
}
.museum-container .hot-museum-swiper .swiper-item .swiper-info .museum-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}
.museum-container .hot-museum-swiper .swiper-item .swiper-info .museum-desc {
  font-size: 28rpx;
  display: block;
  margin-top: 10rpx;
}
.museum-container .section-title {
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}
.museum-container .museum-list {
  flex: 1;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.museum-container .museum-list .museum-item {
  position: relative;
  height: 300rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.museum-container .museum-list .museum-item .museum-content {
  width: calc(100% + 120rpx);
  /* 包含预约按钮的宽度 */
  height: 100%;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.museum-container .museum-list .museum-item .museum-content .museum-image {
  width: calc(100% - 120rpx);
  /* 减去预约按钮的宽度 */
  height: 100%;
  display: block;
  border-radius: 10rpx;
}
.museum-container .museum-list .museum-item .reserve-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 220rpx;
  height: 100%;
  background-color: #9c9c9c;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: opacity 0.3s;
  border-radius: 0 10rpx 10rpx 0;
  z-index: 2;
}
