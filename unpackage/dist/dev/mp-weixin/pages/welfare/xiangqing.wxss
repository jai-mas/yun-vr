.detail-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  background-color: #FFFFFF;
}
.detail-container .top-image-area {
  position: relative;
  width: 100%;
  height: 500rpx;
}
.detail-container .top-image-area .top-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.detail-container .top-image-area .back-btn {
  position: absolute;
  top: 80rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
}
.detail-container .top-image-area .back-btn .back-icon {
  width: 60rpx;
  height: 60rpx;
}
.detail-container .top-image-area .collect-btn {
  position: absolute;
  top: 80rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
}
.detail-container .top-image-area .collect-btn .collect-icon {
  font-size: 50rpx;
  color: #FFFFFF;
  line-height: 1;
}
.detail-container .top-image-area .collect-btn .collect-icon.collected {
  color: #F87B34;
}
.detail-container .top-image-area .oval-title-container {
  position: absolute;
  bottom: -30rpx;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  z-index: 10;
}
.detail-container .top-image-area .oval-title-container .oval-title-bg {
  background-color: #FFFFFF;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  min-width: 60%;
  max-width: 80%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.detail-container .top-image-area .oval-title-container .oval-title-bg .oval-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  text-align: center;
  line-height: 1.4;
}
.detail-container .content-area {
  position: relative;
  padding: 60rpx 40rpx 40rpx;
}
.detail-container .content-area .detail-text {
  margin-top: 30rpx;
}
.detail-container .content-area .detail-text .text-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.8;
}
.detail-container .content-area .detail-images {
  margin-top: 30rpx;
}
.detail-container .content-area .detail-images .detail-img {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
