.baoming-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.baoming-container .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.baoming-container .title-area {
  padding: 90rpx 70rpx 70rpx;
  /* 左右边距调整为70rpx */
  flex-direction: column;
  display: flex;
  align-items: flex-start;
}
.baoming-container .title-area .back-btn {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 80rpx;
  /* 增加与主标题的间距 */
  margin-left: -60rpx;
  /* 左移60rpx */
  display: flex;
  justify-content: center;
  align-items: center;
}
.baoming-container .title-area .back-btn .back-icon {
  width: 60rpx;
  /* 扩大50% */
  height: 60rpx;
  /* 扩大50% */
}
.baoming-container .title-area .main-title {
  font-size: 80rpx;
  /* 字体进一步扩大 */
  font-weight: bold;
  color: #138358;
  margin-bottom: 70rpx;
  /* 增加与副标题的间距 */
  display: inline-block;
  width: auto;
}
.baoming-container .title-area .subtitle-box {
  display: inline-block;
  width: auto;
  background-color: #F87B34;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 120rpx;
  /* 增加与内容模块的间距 */
}
.baoming-container .title-area .subtitle-box .subtitle {
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: "楷体", KaiTi, serif;
}
.baoming-container .content-wrapper {
  position: absolute;
  top: 548rpx;
  /* 调整后的标题区域高度 + 副标题底部间距120rpx */
  left: 70rpx;
  /* 扩大左边距 */
  right: 70rpx;
  /* 扩大右边距 */
  bottom: 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  /* 80%透明度 */
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}
.baoming-container .content-wrapper .content-area {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}
.baoming-container .content-wrapper .content-area .form-area {
  display: flex;
  flex-direction: column;
}
.baoming-container .content-wrapper .content-area .form-area .form-item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #EEEEEE;
}
.baoming-container .content-wrapper .content-area .form-area .form-item .form-label {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 10rpx;
}
.baoming-container .content-wrapper .content-area .form-area .form-item .form-input {
  height: 60rpx;
  background-color: transparent;
  border: none;
  font-size: 28rpx;
  color: #999;
}
.baoming-container .content-wrapper .content-area .form-area .form-notice {
  margin-top: 20rpx;
  padding: 0 10rpx;
}
.baoming-container .content-wrapper .content-area .form-area .form-notice .notice-text {
  font-size: 22rpx;
  color: #FF0000;
  line-height: 1.4;
}
.baoming-container .content-wrapper .content-area .submit-btn-area {
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 20rpx;
}
.baoming-container .content-wrapper .content-area .submit-btn-area .submit-btn {
  width: 240rpx;
  height: 80rpx;
  background-color: #F0D9B5;
  color: #333333;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}
