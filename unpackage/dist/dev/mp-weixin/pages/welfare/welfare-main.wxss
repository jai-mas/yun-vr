.welfare-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.welfare-container .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.welfare-container .title-area {
  padding: 180rpx 70rpx 70rpx;
  /* 上边距增加90rpx，从90rpx调整为180rpx */
  flex-direction: column;
  display: flex;
  align-items: flex-start;
}
.welfare-container .title-area .main-title {
  font-size: 80rpx;
  /* 保持主标题高度不变 */
  font-weight: bold;
  color: #138358;
  margin-bottom: 70rpx;
  /* 增加与副标题的间距 */
  display: inline-block;
  width: auto;
}
.welfare-container .title-area .subtitle-box {
  display: inline-block;
  width: auto;
  background-color: #F87B34;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 60rpx;
  /* 调整与内容模块的间距 */
}
.welfare-container .title-area .subtitle-box .subtitle {
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: "楷体", KaiTi, serif;
}
.welfare-container .modules-container {
  padding: 0 70rpx;
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}
.welfare-container .modules-container .module-card {
  background-color: rgba(255, 255, 255, 0.8);
  /* 80%透明度 */
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
  /* 外阴影 */
}
.welfare-container .modules-container .module-card .card-left {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.welfare-container .modules-container .module-card .card-left .card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}
.welfare-container .modules-container .module-card .card-left .card-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}
.welfare-container .modules-container .module-card .card-right {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.welfare-container .modules-container .module-card .card-right .card-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
