.welfare-container {
  position: relative;
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}
.welfare-container .bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.welfare-container .title-area {
  padding: 90rpx 70rpx 70rpx;
  /* 左右边距调整为40rpx */
  flex-direction: column;
  display: flex;
  align-items: flex-start;
}
.welfare-container .title-area .back-btn {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 80rpx;
  /* 增加与主标题的间距 */
  margin-left: -60rpx;
  /* 左移60rpx */
  display: flex;
  justify-content: center;
  align-items: center;
}
.welfare-container .title-area .back-btn .back-icon {
  width: 60rpx;
  /* 扩大50% */
  height: 60rpx;
  /* 扩大50% */
}
.welfare-container .title-area .main-title {
  font-size: 80rpx;
  /* 字体进一步扩大 */
  font-weight: bold;
  color: #138358;
  margin-bottom: 70rpx;
  /* 增加与副标题的间距 */
  display: inline-block;
  width: auto;
}
.welfare-container .title-area .subtitle-box {
  display: inline-block;
  width: auto;
  background-color: #F87B34;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  margin-bottom: 120rpx;
  /* 增加与内容模块的间距 */
}
.welfare-container .title-area .subtitle-box .subtitle {
  color: #FFFFFF;
  font-size: 28rpx;
  font-family: "楷体", KaiTi, serif;
}
.welfare-container .content-wrapper {
  position: absolute;
  top: 548rpx;
  /* 调整后的标题区域高度 + 副标题底部间距120rpx */
  left: 70rpx;
  /* 扩大左边距 */
  right: 70rpx;
  /* 扩大右边距 */
  bottom: 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  /* 80%透明度 */
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}
.welfare-container .content-wrapper .content-area {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}
.welfare-container .content-wrapper .content-area .content-card {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}
.welfare-container .content-wrapper .content-area .content-card .card-left {
  width: 160rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.welfare-container .content-wrapper .content-area .content-card .card-left .card-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.welfare-container .content-wrapper .content-area .content-card .card-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.welfare-container .content-wrapper .content-area .content-card .card-right .card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  line-height: 1.5;
  margin-bottom: 10rpx;
}
.welfare-container .content-wrapper .content-area .content-card .card-right .card-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.welfare-container .content-wrapper .content-area .content-card .card-right .card-info .card-date {
  font-size: 24rpx;
  color: #666666;
}
.welfare-container .content-wrapper .content-area .content-card .card-right .card-info .card-views {
  font-size: 24rpx;
  color: #999999;
  margin-left: auto;
}
.welfare-container .tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #FFFFFF;
  display: flex;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}
.welfare-container .tabbar .tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.welfare-container .tabbar .tab-item .tab-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 6rpx;
}
.welfare-container .tabbar .tab-item .tab-text {
  font-size: 22rpx;
  color: #666666;
}
